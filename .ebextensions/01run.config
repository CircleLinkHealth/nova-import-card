commands:
    01_set_up_paths:
      command: export HOME=/root && export COMPOSER_HOME=/root
    02_armor_anywhere_download:
      command: "wget https://get.core.armor.com/latest/armor-agent.rpm"
      cwd: "/home/ec2-user"
    03_armor_anywhere_install:
      command: "sudo yum install -y /home/ec2-user/armor-agent.rpm"
      cwd: "/home/ec2-user"
    04_armor_license_key:
      command: "sudo sed -i 's/license=/license=9KR66-XMBBR-CDFRH-TRGCP-BBPTW/' /etc/armor/armor.cfg"
    05_armor_service_start:
      command: "sudo service armor-agent start"

option_settings:
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: HOME
    value: /root
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: COMPOSER_HOME
    value: /public
  # Now setup the VPC that our EC2 instances should use
  - namespace: aws:ec2:vpc
    option_name: VPCId
    value: vpc-fffa179a
   # Now we setup a subnet for our VPC ec2 instances to use
  - namespace: aws:ec2:vpc
    option_name: Subnets
    value: subnet-080c2d4e
  - namespace: aws:elasticbeanstalk:container:php:phpini
    option_name: document_root
    value: /public

container_commands:
  01-armor_config:
    command: "cat .ebextensions/armor.$SERVER > .armor"
    cwd: "/var/app/ondeck"
  02-armor_setup:
    command: "sh /var/app/ondeck/.armor"
    cwd: "/var/app/ondeck"
  03-artisan_migrate:
    command: "php artisan migrate --force"
    cwd: "/var/app/ondeck"
    leader_only: true

files:
 "/etc/php.ini" :
   mode: "000644"
   owner: root
   group: root
   content: |
     max_execution_time = 301
     max_file_uploads = 201
     max_input_time = 301
     memory_limit = 2049M
     post_max_size = 65M
     upload_max_filesize = 65M

