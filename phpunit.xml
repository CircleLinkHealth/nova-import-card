<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Eligibility">
            <directory suffix="Test.php">./Modules/Eligibility/Tests</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Deployment">
            <directory suffix="Test.php">./tests/integration/</directory>
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Notes">
            <directory>./tests/Notes/</directory>
        </testsuite>
        <testsuite name="TimeTracking">
            <directory>./tests/TimeTracking/</directory>
        </testsuite>
        <testsuite name="Calls">
            <directory>./tests/Calls/</directory>
        </testsuite>
        <testsuite name="Care_Plan">
            <directory>./tests/CarePlan/</directory>
        </testsuite>
        <testsuite name="Provider">
            <directory>./tests/Provider/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./app</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <!--You may use this for running the test suite locally using mysql-->
        <!--<env name="DB_CONNECTION" value="test_suite"/>-->

        <!--Leave sqlite uncommented for circleci to work-->
        <env name="DB_CONNECTION" value="sqlite"/>

        <env name="MAIL_DRIVER" value="log"/>

        <env name="LADA_CACHE_ACTIVE" value="false"/>

        <ini name="memory_limit" value="1024M"/>
    </php>
</phpunit>
